@model OES.ViewModels.CreateExamViewModel
@{
    ViewBag.Title = "CreateExam";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<link href="~/Content/jquery.timepicker.css" rel="stylesheet" />

<h2>CreateExam</h2>

<div class="main-content">
    <div class="container">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">Create Exam</div>
                            <div class="card-body card-block">
                                @using (Html.BeginForm("CreateExam", "Teachers")) {
                                    @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Course</div>
                                        @*<input type="text" id="username3" name="username3" class="form-control">*@
                                        @Html.DropDownListFor(c => c.CourseId, (SelectList)ViewBag.CoursesList, "Select Course", new { @class = "form-control" })

                                    </div>
                                    @Html.ValidationMessageFor(c => c.CourseId)
                                </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">Exam Date</div>
                                            @Html.EditorFor(s => s.ExamDate, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">Exam Time</div>
                                            @Html.TextBoxFor(t => t.ExamTime, "{0:HH:mm}", new { @class = "form-control" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="input-group">
                                            <div class="input-group-addon">Exam Name</div>
                                            @*<input type="text" id="username3" name="username3" class="form-control">*@
                                            @Html.TextBoxFor(s => s.ExamName, new { @class = "form-control" })
                                            
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col col-md-6</div>">
                                            <label for="password-input" class=" form-control-label">Is the exam going to be held Online?</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                @Html.RadioButtonFor(o => o.IsOnline, "True") Yes <br />
                                                @Html.RadioButtonFor(o => o.IsOnline, "False") No
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col col-md-6</div>">
                                            <label for="password-input" class=" form-control-label">Want To Catagorize the Questions?</label>
                                        </div>
                                        <div class="col col-md-9">
                                            <div class="form-check-inline form-check">
                                                @Html.RadioButtonFor(o => o.IsCatagorized, "True") Yes <br />
                                                @Html.RadioButtonFor(o => o.IsCatagorized, "False") No
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-actions form-group">
                                        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                    </div>


                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery.timepicker.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ExamDate').datepicker({
                dateFormat: "mm/dd/yy",
                showStatus: true,
                showWeeks: true,
                currentText: 'Now',
                autoSize: true,
                gotoCurrent: true,
                showAnim: 'blind',
                highlightWeek: true
            });


        });
    </script>
    <script type="text/javascript">
        $('#ExamTime').timepicker(
            {
                'minTime': '00:00',
                'maxTime': '23:00',
                'showDuration': true
            }
        );
    </script>
   
}
