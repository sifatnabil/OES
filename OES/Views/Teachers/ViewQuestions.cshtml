@model IEnumerable<OES.Models.Question>
@{
    ViewBag.Title = "ViewQuestions";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="container">

            @Html.ActionLink("Add Questions", "SetQuestion", "Teachers", new { id = Url.RequestContext.RouteData.Values["id"]}, null)
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title mb-3">Question</strong>
                        </div>
                        <div class="card-body">
                            
                            @foreach (var i in Model) {
                                <div class="col-lg-12 col-sm-1">
                                    <strong>Question: </strong>@i.Ques
                                </div>
                                <div class="col-lg-12">
                                    <strong>Option 1: </strong>@i.Option1
                                </div>
                                <div class="col-lg-12">
                                    <strong>Option 2: </strong>@i.Option2
                                </div>
                                <div class="col-lg-12">
                                    <strong>Option 3: </strong>@i.Option3
                                </div>

                                <div class="col-lg-12">
                                    <strong>Option 4: </strong>@i.Option4
                                </div>
                                <div class="col-lg-12">
                                    <strong>Right Answer: </strong>@i.RightAnswer
                                </div>
                                <div class="col-lg-12">
                                    <strong>Mark: </strong>@i.Mark
                                </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>      
    </div>
</div>