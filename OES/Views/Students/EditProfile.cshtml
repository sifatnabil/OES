@model OES.ViewModels.StudentProfielEditViewModel
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="main-content">
    <div class="container">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">Edit Profile</div>
                        <div class="card-body card-block">
                            @using (Html.BeginForm("EditProfile", "Students")) {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">First Name</div>
                                        @*<input type="text" id="username3" name="username3" class="form-control">*@
                                        @Html.TextBoxFor(s => s.FirstName, new { @class = "form-control" })
                                        <div class="input-group-addon">
                                            <i class="fa fa-star-half"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Last Name</div>
                                        @*<input type="text" id="username3" name="username3" class="form-control">*@
                                        @Html.TextBoxFor(s => s.LastName, new { @class = "form-control" })
                                        <div class="input-group-addon">
                                            <i class="fa fa-star-half-empty"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Address</div>
                                        @*<input type="text" id="username3" name="username3" class="form-control">*@
                                        @Html.TextBoxFor(s => s.Address, new { @class = "form-control" })
                                        <div class="input-group-addon">
                                            <i class="fa fa-location-arrow"></i>
                                        </div>
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Phone Number</div>
                                        @*<input type="email" id="email3" name="email3" class="form-control">*@
                                        @Html.TextBoxFor(s => s.PhoneNumber, new { @class = "form-control" })
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-addon">Blood Group</div>
                                        @Html.DropDownListFor(s => s.BloodGroupId, new SelectList(Model.BloodGroups, "Id", "GroupName"), "Select Your Blood Group", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-actions form-group">
                                    <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        </div>
</div>

