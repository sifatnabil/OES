@model OES.Models.Question
@{
    ViewBag.Title = "AttendExam";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}


<div class="col col-md-9">
    <div class="form-check">
        <div class="radio">
            <label for="radio1" class="form-check-label ">
                <input type="radio" id="radio1" name="radios" value="option1" class="form-check-input">Option 1
            </label>
        </div>
        <div class="radio">
            <label for="radio2" class="form-check-label ">
                <input type="radio" id="radio2" name="radios" value="option2" class="form-check-input">Option 2
            </label>
        </div>
        <div class="radio">
            <label for="radio3" class="form-check-label ">
                <input type="radio" id="radio3" name="radios" value="option3" class="form-check-input">Option 3
            </label>
        </div>
    </div>
</div>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">

                        @using (Html.BeginForm("AttendExam", "Students")) {

                            @Html.HiddenFor(q => q.Id)
                            <div class="card-body">
                                <h1>@Html.DisplayFor(q => q.Ques)</h1>
                                <div class="col col-md-9">
                                    <div class="form-check">
                                        <div class="radio">
                                            <label for="radio1" class="form-check-label ">
                                                @*<input type="radio" id="radio1" name="radios" value="option1" class="form-check-input">Option 1*@
                                                @Html.RadioButtonFor(q => q.Option1, new { @class = "form-control", @Name = "Answer" }) @Model.Option1
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label for="radio2" class="form-check-label ">
                                                @Html.RadioButtonFor(q => q.Option2, new { @class = "form-control", @Name = "Answer" }) @Model.Option2

                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label for="radio3" class="form-check-label ">
                                                @Html.RadioButtonFor(q => q.Option3, new { @class = "form-control", @Name = "Answer" }) @Model.Option3
                                            </label>
                                        </div>
                                        <div class="radio">
                                            <label for="radio3" class="form-check-label ">
                                                @Html.RadioButtonFor(q => q.Option4, new { @class = "form-control", @Name = "Answer" }) @Model.Option4
                                            </label>
                                        </div>
                                    </div>
                                    @Html.HiddenFor(q => q.RightAnswer)
                                    @Html.HiddenFor(q => q.Mark)
                                </div>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


